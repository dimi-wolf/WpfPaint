<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="TranslateThumb">
        <Rectangle Width="15" Height="15" Fill="#666495ED" Stroke="#6495ED" StrokeThickness="1"/>
    </ControlTemplate>

    <ControlTemplate x:Key="ResizeThumb">
        <Rectangle Width="10" Height="10" Fill="#662ECC71" Stroke="#2ECC71" StrokeThickness="1"/>
    </ControlTemplate>

</ResourceDictionary>